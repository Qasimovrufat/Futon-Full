@model Futon.Models.Setting

@{
    ViewBag.Title = "Index";
}

<div class="content">
    <div class="container-fluid">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title d-inline-block">Settings</h4>
                </div>
                <div class="card-body table-responsive">
                    <div class="col-lg-4">

                    </div>
                    <table class="table table-hover">
                        <thead class="text-warning">
                        <th> Photo</th>
                        <th>
                            Email
                        </th>
                        <th>
                            Phone
                        </th>
                        <th>
                            Facebook
                        </th>
                        <th>
                            Twitter
                        </th>
                        <th>
                            Adress
                        </th>
                        </thead>
                        <tbody>
                          
                            <tr>
                                <td>
                                    <img src="~/Uploads/Setting/@Model.logo" alt="" />
                                   
                                </td>
                                <td>
                                    @Model.Email
                                </td>
                                <td>
                                    @Model.Phone
                                </td>
                                <td>
                                    <a href="@Model.Facebook">Facebook</a>
                                </td>
                                <td>
                                    <a href="@Model.Twitter">Twitter</a>
                                </td>
                                <td>
                                    @Model.Adress
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |

                                    
                                </td>
                            </tr>
                         


                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

