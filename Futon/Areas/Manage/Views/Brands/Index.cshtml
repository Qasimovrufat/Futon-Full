@model List<Futon.Models.Brand>
@{
    ViewBag.Title = "Brands";
}

<div class="content">
    <div class="container-fluid">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title d-inline-block">Brands</h4>
                    <a href=" @Url.Action("create")" class="btn btn-info float-right">Add Brand</a>
                </div>
                <div class="card-body table-responsive">
                    <div class="col-lg-4">

                    </div>
                    <table class="table table-hover">
                        <thead class="text-warning">
                        <th> Logo</th>
                        <th>
                            Name
                        </th>
                       

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img width="100" src="~/Uploads/Brands/@item.Logo" alt="" />

                                    </td>
                                    <td>
                                        @item.Name
                                    <td>
                                    <td>
                                        @Html.ActionLink("Edit", "edit", new { id = item.Id }) |
                                        <a href="@Url.Action("delete",new { id = item.Id })" onclick="return confirm('are you sure?')">Delete</a>


                                    </td>
                                </tr>
                            }




                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


