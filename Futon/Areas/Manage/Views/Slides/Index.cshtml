@model List<Futon.Models.Slide>
@{
    ViewBag.Title = "Slides";
}

<div class="content">
    <div class="container-fluid">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title d-inline-block">Slides</h4>
                    <a href=" @Url.Action("create")" class="btn btn-info float-right">Add Slide</a>
                </div>
                <div class="card-body table-responsive">
                    <div class="col-lg-4">

                    </div>
                    <table class="table table-hover">
                        <thead class="text-warning">
                        <th> Photo</th>
                        <th>
                            Slogan
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Text
                        </th>
                        <th>
                            Url
                        </th>
                    
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img width="100" src="~/Uploads/Slides/@item.Photo" alt="" />

                                </td>
                                <td>
                                    @item.Slogan
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                @if (item.Text != null)
                                {
                                    <td>
                                        @(item.Text.Count() > 20 ? item.Text.Substring(0, 20) : item.Text)
                                    </td>
                                }

                                <td>
                                    @item.Url
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "edit", new { id = item.Id }) |
                                    <a href="@Url.Action("delete",new { id = item.Id })" onclick="return confirm('are you sure?')">Delete</a>


                                </td>
                            </tr>
                            }




                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

