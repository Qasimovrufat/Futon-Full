@model Futon.Models.Slide
@{
    ViewBag.Title = "Edit";
}

<div class="content">
    <div class="container-fluid">


        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title d-inline-block">Edit</h4>

                </div>
                <div class="card-body table-responsive">
                    <form autocomplete="off" action="@Url.Action("edit","slides", new { id = Model.Id, deletedphoto = Model.Photo })" method="post" id="infoForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Slogan</label>
                            <input type="text" value="@Model.Slogan" class="form-control" name="Slogan">
                        </div>
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" value="@Model.Title" class="form-control" name="Title">
                        </div>
                        <div class="form-group">
                            <label>Text</label>
                            <input type="text" value="@Model.Text" class="form-control" name="Text">
                        </div>
                        <div class="form-group">
                            <label>Url</label>
                            <input type="text" value="@Model.Url" class="form-control" name="Url">
                        </div>

                        <div class="">
                            <label>Photo</label>
                            <input class="photo" style="display:block;" type="file" name="Photo">
                        </div>
                        <div class="col-lg-12">
                            <div class="img">
                                <img width="250" id="img" src="~/Uploads/Slides/@Model.Photo" alt="" />
                            </div>
                        </div>
                        <button type="submit" class=" btn btn-info">Edit</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

